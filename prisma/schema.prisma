generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Race {
  id        String   @id
  name      String
  size      String
  speed     Float
  modifiers Json
  traits    String[]
}

model Class {
  id                   String        @id
  name                 String
  hit_dice             Int
  proficiencies        String[]
  skills               String[]
  spellcasting_ability String?
  spells               ClassSpells[]
}

model Background {
  id            String   @id
  name          String
  proficiencies String[]
}

model Spell {
  id           String        @id
  name         String
  level        Int
  school       String
  casting_time String
  range        String
  components   String[]
  duration     String
  description  Json[]
  classes      ClassSpells[]
}

model ClassSpells {
  class   Class  @relation(fields: [classId], references: [id])
  classId String
  spell   Spell  @relation(fields: [spellId], references: [id])
  spellId String

  @@id([classId, spellId])
}
