generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Race {
  id        String   @id
  name      String
  size      String
  speed     Float
  modifiers Json
  traits    String[]

  @@map("race")
}

model Class {
  id                  String        @id
  name                String
  hitDice             Int           @map("hit_dice")
  proficiencies       String[]
  skills              String[]
  spellcastingAbility String?       @map("spellcasting_ability")
  spells              ClassSpells[]

  @@map("class")
}

model Background {
  id            String   @id
  name          String
  proficiencies String[]

  @@map("background")
}

model Spell {
  id          String        @id
  name        String
  level       Int
  school      String
  castingTime String        @map("casting_time")
  range       String
  components  String[]
  duration    String
  description Json[]
  classes     ClassSpells[]

  @@map("spell")
}

model ClassSpells {
  class   Class  @relation(fields: [classId], references: [id])
  classId String @map("class_id")
  spell   Spell  @relation(fields: [spellId], references: [id])
  spellId String @map("spell_id")

  @@id([classId, spellId])
  @@map("class_spells")
}
